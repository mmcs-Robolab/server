extends layout/control-layout

block content
    .col-md-12.control-container
        .row
            .col-md-7.drive-col
                .editor-panel
                    .btn-icon.btn-gamepad
                        i.fa.fa-gamepad
                    .editor-prop
                        span.panel-info Тема
                        select.theme-select
                            option(value="monokai") Monokai
                            option(value="tomorrow") Tomorrow
                            option(value="twilight") Twilight

                        span.panel-info Язык
                        select.lang-select
                            option(value="csharp") C#
                            option(value="pascal") Pascal
                #editor.code-area
                .editor-bottom-panel
                    input(type="file").file-loader-input
                    button.file-loader-btn
                        i.fa.fa-cloud-upload
                    button.btn-compile компиляция
            .col-md-5
                .video-panel
                    .btn-icon.btn-camera
                        i.fa.fa-video-camera
                .video-area
                    iframe(src="//player.vimeo.com/video/109832468", width="100%", height="100%", frameborder="0")

